<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#27282D"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    xmlns:wave="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FragmentUltraPowerSaving">
    <com.google.android.gms.ads.AdView
        android:id="@+id/av_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:adSize="@string/banner_size"
        ads:adUnitId="@string/banner_id">
    </com.google.android.gms.ads.AdView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/av_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        wave:layout_constraintGuide_percent="0.55"
        android:id="@+id/cgl_battery"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        wave:layout_constraintGuide_percent="0.6"
        android:id="@+id/cgl_ultrapowertext"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        wave:layout_constraintGuide_percent="0.7"
        android:id="@+id/cgl_ultrapower_button"
        />
<androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        wave:layout_constraintGuide_percent="0.75"
        android:id="@+id/cgl_view"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/red_ellipse"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="@+id/crpv_progress"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/crpv_progress"
        app:layout_constraintStart_toStartOf="@+id/crpv_progress"
        app:layout_constraintTop_toTopOf="@+id/crpv_progress"
        app:layout_constraintWidth_percent="1"
        />

    <com.timqi.sectorprogressview.ColorfulRingProgressView
        android:id="@+id/crpv_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_layout_background"
        app:layout_constraintBottom_toTopOf="@+id/cgl_battery"
        app:layout_constraintWidth_percent="0.7"
        app:percent="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:bgColor="#2E3037"
        app:fgColorEnd="#EE7048"
        app:fgColorStart="#EE4856"
        app:startAngle="0"
        app:strokeWidth="15dp"

        />
    <View
        android:layout_width="10dp"
        android:id="@+id/v_center"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="@+id/crpv_progress"
        app:layout_constraintEnd_toEndOf="@+id/crpv_progress"
        app:layout_constraintTop_toTopOf="@+id/crpv_progress"
        app:layout_constraintBottom_toBottomOf="@+id/crpv_progress"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/cgl_cpu"
        app:layout_constraintGuide_percent="0.42"
        />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:id="@+id/iv_cpu"
       app:layout_constraintHeight_percent="0.11"
       app:layout_constraintStart_toStartOf="@+id/cgl_cpu"
app:layout_constraintWidth_percent="0.2"
       app:layout_constraintBottom_toTopOf="@+id/v_center"
       android:src="@drawable/ic_cpu"
       />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#27282D"
        app:layout_constraintHeight_percent="0.08"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cool_cpu"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_overheat"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/crpv_progress"
        app:layout_constraintEnd_toEndOf="@+id/crpv_progress"
        app:layout_constraintTop_toBottomOf="@+id/v_center"
        android:text="@string/overheat"
        android:textColor="#EE4856"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cpu_text"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/crpv_progress"
        app:layout_constraintEnd_toEndOf="@+id/crpv_progress"
        app:layout_constraintTop_toTopOf="@+id/tv_overheat"
        app:layout_constraintBottom_toBottomOf="@+id/crpv_progress"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/need_cool"
        android:textColor="#EE4856"
        android:textSize="16sp"
        android:id="@+id/tv_ultrapowertext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cgl_ultrapower_button"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton_do_it"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:text="@string/cool"
        android:background="@drawable/optimize_button"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cgl_ultrapowertext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#4D4D4D"
        android:id="@+id/v_view"
        app:layout_constraintTop_toBottomOf="@+id/cgl_view"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_bottom_apps"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            wave:layout_constraintGuide_percent="0.77"
            android:id="@+id/cgl_apps"
            />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"
        android:id="@+id/cgl_1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22"
        android:id="@+id/cgl_2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42"
        android:id="@+id/cgl_3"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62"
        android:id="@+id/cgl_4"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"
        android:id="@+id/cgl_5"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_app_1"
app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/cgl_1"
        app:layout_constraintTop_toBottomOf="@+id/cgl_apps"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/tv_app_size_1"
        app:layout_constraintStart_toStartOf="@+id/iv_app_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_app_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_1"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_app_2"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/cgl_2"
        app:layout_constraintTop_toBottomOf="@+id/cgl_apps"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/tv_app_size_2"
        app:layout_constraintStart_toStartOf="@+id/iv_app_2"
        app:layout_constraintEnd_toEndOf="@+id/iv_app_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_2"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_app_3"

        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/cgl_3"
        app:layout_constraintTop_toBottomOf="@+id/cgl_apps"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/tv_app_size_3"
        app:layout_constraintStart_toStartOf="@+id/iv_app_3"
        app:layout_constraintEnd_toEndOf="@+id/iv_app_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_3"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_app_4"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/cgl_4"
        app:layout_constraintTop_toBottomOf="@+id/cgl_apps"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/tv_app_size_4"
        app:layout_constraintStart_toStartOf="@+id/iv_app_4"
        app:layout_constraintEnd_toEndOf="@+id/iv_app_4"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_4"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_app_5"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/cgl_5"
        app:layout_constraintTop_toBottomOf="@+id/cgl_apps"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/tv_app_size_5"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/iv_app_5"
        app:layout_constraintEnd_toEndOf="@+id/iv_app_5"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_5"
        android:layout_marginTop="5dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>