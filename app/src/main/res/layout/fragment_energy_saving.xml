<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.gms.ads.AdView
        android:id="@+id/av_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:adSize="@string/banner_size"
        app:adUnitId="@string/banner_id"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/av_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#27282D"
        app:layout_constraintHeight_percent="0.08"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energy_saving"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0833" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.383" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
android:id="@+id/ypview_view"
        android:background="@drawable/ypview_main_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cgl_top"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="1:1"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/red_ellipse"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="@+id/yw_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/yw_view"
        app:layout_constraintStart_toStartOf="@+id/yw_view"
        app:layout_constraintTop_toTopOf="@+id/yw_view"
        app:layout_constraintWidth_percent="1"
        />
    <com.yangp.ypwaveview.YPWaveView
        android:layout_width="0dp"
        android:layout_height="0dp"
android:background="@drawable/ypview_background"
        app:animatorEnable="true"
        app:textHidden="true"
        app:layout_constraintStart_toStartOf="@+id/ypview_view"
        app:layout_constraintEnd_toEndOf="@+id/ypview_view"
        app:layout_constraintWidth_percent="0.62"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/ypview_view"
        app:layout_constraintBottom_toBottomOf="@+id/ypview_view"
        app:shapeType="circle"
        android:id="@+id/yw_view"
        app:borderColor="@color/ypviewfrontcolor"
        app:frontColor="@color/ypviewfrontcolor"
        app:behideColor="@color/ypviewbehindcolor"
        app:borderWidthSize="0dp"
        style="@style/ypviewcolor"
        app:max="100"
        app:progress="59"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/yw_view"
    app:layout_constraintEnd_toEndOf="@+id/yw_view"
    app:layout_constraintTop_toTopOf="@+id/yw_view"
    app:layout_constraintBottom_toBottomOf="@+id/yw_view"
    android:id="@+id/tv_energy_percent"
    android:textSize="36sp"
    android:textColor="@color/white"
    />
   <TextView
       android:layout_width="wrap_content"
       app:layout_constraintBottom_toTopOf="@+id/tv_work_time_text"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="20dp"
       android:textColor="#73EE48"
       android:textSize="24sp"
       android:id="@+id/tv_work_time"
       android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/yw_view"
        app:layout_constraintBottom_toTopOf="@+id/cl_modes_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"

        android:textSize="12sp"
        android:text="@string/work_left_time"
        android:id="@+id/tv_work_time_text"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/cl_modes_start"
        app:layout_constraintBottom_toTopOf="@+id/cgl_modes"
        app:layout_constraintStart_toEndOf="@+id/cgl_modes_start"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/battery_saving_main_normal_mode"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/v_normal_mode"
            app:layout_constraintHeight_percent="0.85"
            app:layout_constraintDimensionRatio="1:1"
android:background="@drawable/battery_saving_normal_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="@string/normal_mode"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textSize="12sp"
    android:textColor="@color/white"
    />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cgl_modes"
  app:layout_constraintStart_toStartOf="@+id/cl_modes_start"
        app:layout_constraintEnd_toEndOf="@+id/cl_modes_end"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/battery_saving_main_ultrapower_mode"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/v_ultra_mode"
            app:layout_constraintHeight_percent="0.85"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/battery_saving_ultra_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/ultra_mode"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cgl_modes"
android:id="@+id/cl_modes_end"
        app:layout_constraintEnd_toStartOf="@+id/cgl_modes_end"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/battery_saving_main_extremepower_mode"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/v_extreme_mode"
            app:layout_constraintHeight_percent="0.85"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/battery_saving_extreme_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/extreme_mode"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>